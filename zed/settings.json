  "ui_font_size": 16,
  "buffer_font_size": 16,
  "ui_font_family": ".ZedMono",
  "theme": {
    "mode": "system",
    "light": "Catppuccin Mocha",
    "dark": "One Dark"
  },
  "relative_line_numbers": "enabled",
  "title_bar": {
    "show_user_picture": false
  },
  "terminal": {
    "font_family": "BlexMono Nerd Font Mono"
  },
  "vim_mode": true,
  "diagnostics": {
    "inline": {
      "enabled": true
    }
  },
  "collaboration_panel": {
    "button": false
  },
  "search": {
    "button": false
  },
  "outline_panel": {
    "button": false
  },
  "notification_panel": {
    "button": false
  },
  "agent": {
    "always_allow_tool_actions": true,
    "play_sound_when_agent_done": false,
    "default_profile": "ask",
    "default_model": {
      "provider": "lmstudio",
      "model": "openai/gpt-oss-20b"
    }
  },
  "features": {
    "edit_prediction_provider": "none"
  },
  "show_edit_predictions": false,
  "edit_predictions": {
    "disabled_globs": [],
    "mode": "eager",
    "copilot": {
      "proxy": null,
      "proxy_no_verify": null,
      "enterprise_uri": null
    },
    "enabled_in_text_threads": false
  },
  "languages": {
    "JavaScript": {
      "inlay_hints": {
        "enabled": true
      },
      "formatter": "prettier",
      "format_on_save": "off"
    },
    "TypeScript": {
      "inlay_hints": {
        "enabled": true
      },
      "formatter": "prettier"
    },
    "TSX": {
      "formatter": "prettier"
    },
    "JSON": {
      "formatter": "prettier"
    }
  },
  "prettier": {
    "allowed": true
  },
  "format_on_save": "off"
}
